<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">
    <com.tencent.rtmp.ui.TXCloudVideoView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:paddingTop="21dp"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:layout_gravity="center"
            app:contentInsetStart="0dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/r20_so_64"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingTop="1dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/pusher_avatar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="3dp"
                    android:padding="1dp"
                    android:background="@drawable/bo_one"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/pusher_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="2dp"
                    android:minWidth="40dp"
                    android:layout_toEndOf="@id/pusher_avatar"
                    android:fontFamily="@font/fzqk"
                    android:maxLines="1"
                    android:maxEms="10"
                    android:ellipsize="end"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/watch"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_below="@id/pusher_shop_name"
                    android:layout_toEndOf="@id/pusher_avatar"
                    android:fontFamily="@font/fzqk"
                    android:textSize="10sp"
                    android:text="1000人"
                    android:layout_marginTop="2dp"/>
                <Button
                    android:id="@+id/focus"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/r2_socyan"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/pusher_shop_name"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="@color/white"
                    android:fontFamily="@font/fzqk"
                    android:textSize="12sp"
                    tools:ignore="RtlHardcoded" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:orientation="horizontal">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/caht_recyclerview"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="280dp"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/item"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/r5_sowhite">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/item_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius_bottom_left="5dp"
                    app:riv_corner_radius_top_left="5dp" />
                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/item_image"
                    android:textColor="@color/blackLight"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/item_image"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/add_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:background="@drawable/r15_sowhite_stpri"
                    android:text="加价"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />
            </RelativeLayout>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp">
                <EditText
                    android:id="@+id/chat_input"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:maxLines="1"
                    android:maxEms="25"
                    android:layout_gravity="center_vertical"
                    android:textColorHint="@color/background_gray"
                    android:textColor="@color/white"
                    android:hint="和主播聊点什么..."/>
                <TextView
                    android:id="@+id/send"
                    android:gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="28dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/r5_soblue"
                    android:text="@string/send"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="8dp"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/shopping"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/add_shopping"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>