<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:background="@drawable/layer3_r2_p05_00_08">
        <LinearLayout
            android:id="@+id/shelves"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/get_coins_shelves"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/shelves_name"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:textColor="@color/blackLight"
                    android:textSize="13sp"
                    android:gravity="center_vertical"
                    android:text="每日上3件货"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/shelves_coins_num"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/shelves_get_coins"
                android:layout_width="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:text="立即前往"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/r2_soblue"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/trading"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/get_coins_trading"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/trading_name"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:textColor="@color/blackLight"
                    android:textSize="13sp"
                    android:gravity="center_vertical"
                    android:text="成功交易一单(销售额>500)"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/trading_coins_num"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:gravity="center_vertical"
                    android:textSize="11.5sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/trading_get_coins"
                android:layout_width="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:text="立即前往"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/r2_soblue"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/get_coins_share"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/share_name"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:textColor="@color/blackLight"
                    android:textSize="13sp"
                    android:gravity="center_vertical"
                    android:text="成功分享店铺一次"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/share_coins_num"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/share_get_coins"
                android:layout_width="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:text="立即前往"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/r2_soblue"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/invite"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/get_coins_invite"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/invite_name"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:textColor="@color/blackLight"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    android:text="邀请新用户注册"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/invite_coins_num"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/invite_get_coins"
                android:layout_width="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:text="立即前往"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/r2_soblue"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/enter"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/get_coins_enter"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/enter_name"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:textColor="@color/blackLight"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    android:text="邀请新商家入驻"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/enter_coins_num"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="22dp"
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/enter_get_coins"
                android:layout_width="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:text="立即前往"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/r2_soblue"/>
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>