<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SmallSp"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@color/white">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:layout_gravity="center"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:contentInsetStart="0dp">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:textColor="@color/blackLight"
                android:textSize="18sp"  />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="@string/appoint_master"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/master_name"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:textColor="@color/blackLight"
                    android:text="@string/plz_select"
                    android:textStyle="bold"
                    android:textSize="11.5sp"/>
                <ImageView
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="6dp"
                    android:src="@mipmap/triangle_right"
                    android:layout_height="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:background="@drawable/layer3_r5_p05_00_08">
                <EditText
                    android:id="@+id/introduce_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="3dp"
                    android:background="@null"
                    android:hint="请输入你的定制详细需求"
                    android:textColor="@color/blackLight"
                    android:textSize="13sp"
                    android:gravity="top|start"
                    android:minHeight="100dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.5sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:textColor="@color/blackLight"
                    android:text="@string/usage_scenarios"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/personal_use"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:text="@string/personal_use"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:background="@drawable/selector_ac_white_red"
                        android:textColor="@drawable/recy_btn_text_selector1"/>
                    <TextView
                        android:id="@+id/friend_use"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:text="@string/friend"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:background="@drawable/selector_ac_white_red"
                        android:textColor="@drawable/recy_btn_text_selector1"/>
                    <TextView
                        android:id="@+id/gift_use"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:text="@string/gift"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:background="@drawable/selector_ac_white_red"
                        android:textColor="@drawable/recy_btn_text_selector1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:background="@drawable/layer3_r5_p05_00_08">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.5sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:textColor="@color/blackLight"
                    android:text="@string/about_price"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/low_price"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:layout_marginStart="13dp"
                        android:layout_marginEnd="13dp"
                        android:text="@string/low_5000"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:background="@drawable/selector_ac_white_red"
                        android:textColor="@drawable/recy_btn_text_selector1"/>
                    <TextView
                        android:id="@+id/mid_price"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:layout_marginStart="13dp"
                        android:layout_marginEnd="13dp"
                        android:text="@string/mid_5000_50000"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:background="@drawable/selector_ac_white_red"
                        android:textColor="@drawable/recy_btn_text_selector1"/>
                    <TextView
                        android:id="@+id/top_price"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:layout_marginStart="13dp"
                        android:layout_marginEnd="13dp"
                        android:text="@string/top_50000"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:background="@drawable/selector_ac_white_red"
                        android:textColor="@drawable/recy_btn_text_selector1" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fenlei_linear"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="@string/fenlei"
                        android:textColor="@color/blackLight"
                        android:textStyle="bold"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/fenlei"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:textColor="@color/blackLight"
                        android:hint="@string/plz_select"
                        android:textStyle="bold"
                        android:textSize="11.5sp"/>
                    <ImageView
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="6dp"
                        android:src="@mipmap/triangle_right"
                        android:layout_height="12dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/zhonglei_linear"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="@string/zhonglei"
                        android:textColor="@color/blackLight"
                        android:textStyle="bold"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/zhonglei"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:textColor="@color/blackLight"
                        android:hint="@string/plz_select"
                        android:textStyle="bold"
                        android:textSize="11.5sp"/>
                    <ImageView
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="6dp"
                        android:src="@mipmap/triangle_right"
                        android:layout_height="12dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/waiguan_linear"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="@string/waiguan"
                        android:textColor="@color/blackLight"
                        android:textStyle="bold"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/waiguan"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:textColor="@color/blackLight"
                        android:hint="@string/plz_select"
                        android:textStyle="bold"
                        android:textSize="11.5sp"/>
                    <ImageView
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="6dp"
                        android:src="@mipmap/triangle_right"
                        android:layout_height="12dp"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/submit"
                android:textSize="15sp"
                android:layout_gravity="bottom"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="@string/submit"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:background="@drawable/r2_soblue"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <View
        android:id="@+id/divider"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="1dp"
        android:background="@color/dividerGray"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>