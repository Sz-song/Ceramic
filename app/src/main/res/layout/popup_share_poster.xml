<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent_20">
    <ImageView
        android:id="@+id/cancel"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@mipmap/cancel_white"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_gravity="end"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="35dp"
            android:orientation="vertical"
            android:background="@drawable/r5_sowhite">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/shop_portrait"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/shop_portrait"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="80dp"
                    android:textColor="@color/blackLight"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="25dp" />
                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_toEndOf="@+id/shop_portrait"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="80dp"
                    android:textColor="@color/blackLight"
                    android:textSize="13.5sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/share_type"
                    android:layout_width="wrap_content"
                    android:layout_toEndOf="@+id/shop_portrait"
                    android:layout_below="@+id/shop_name"
                    android:layout_marginEnd="80dp"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:background="@drawable/r5_sored_gra"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_height="18dp" />
                <ImageView
                    android:id="@+id/qr_code"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/qr_code"
                    android:minWidth="70dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:textSize="8sp"
                    android:text="长按识别二维码"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/poster_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:src="@drawable/share_poster_bot"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#fafafa"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/sava"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/share_post_download"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:gravity="center_horizontal"
                android:textColor="@color/gray"
                android:text="保存"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/wechat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/share_post_wechat"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:gravity="center_horizontal"
                android:textColor="@color/gray"
                android:text="微信"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/wechat_monment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/share_post_wechat_monment"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:gravity="center_horizontal"
                android:textColor="@color/gray"
                android:text="@string/wechat_monment"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/qq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/share_post_qq"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:gravity="center_horizontal"
                android:textColor="@color/gray"
                android:text="@string/qq"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/weibo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/share_post_weibo"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:gravity="center_horizontal"
                android:textColor="@color/gray"
                android:text="@string/weibo"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>