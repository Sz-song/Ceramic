            android:layout_height="match_parent"
            android:minWidth="30dp"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#333333"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:textSize="13sp"
            android:textColor="#333333"
            android:text="mm"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
