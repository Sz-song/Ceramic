        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/masterintrotit"/>
        <LinearLayout
            android:id="@+id/cell_master"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/master_img"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginEnd="10dp"
                    android:padding="1dp"
                    android:background="@drawable/bo_one"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/master_name"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginEnd="100dp"
                    android:textColor="@color/white"
                    android:layout_toEndOf="@+id/master_img"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/master_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_toEndOf="@+id/master_img"
                    android:textColor="@color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="100dp"/>
                <TextView
                    android:id="@+id/master_focus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:minWidth="50dp"
                    android:textColor="@color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/r4_stwhite"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/master_store_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/white"
                android:maxLines="2"
                android:ellipsize="end"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/master_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">
            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:id="@+id/enter_master_index"
                android:textColor="@color/white"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:text="进入主页"
                android:gravity="center"
                android:background="@drawable/r4_stwhite"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/dividerGray"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
