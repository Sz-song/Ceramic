<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:id="@+id/note0"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="带纸箱"
                android:background="@drawable/r2_sowhite_stlightgray"
                android:layout_weight="5"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/note1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="需要爬楼"
                android:background="@drawable/r2_sowhite_stlightgray"
                android:layout_weight="5"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/note2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="带胶带"
                android:layout_gravity="center_vertical"
                android:background="@drawable/r2_sowhite_stlightgray"
                android:gravity="center"
                android:layout_weight="5"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/note3"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="大件物品"
                android:layout_gravity="center_vertical"
                android:background="@drawable/r2_sowhite_stlightgray"
                android:gravity="center"
                android:layout_weight="5"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="4dp"
            android:layout_height="120dp">
            <EditText
                android:id="@+id/note_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:hint="在这里给快递员捎句话，最多30字"
                android:gravity="start|top"
                android:textSize="15sp"
                android:maxLength="30"
                android:background="@drawable/r2_sowhite_stwhite"/>
            <TextView
                android:id="@+id/text_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:textColor="@color/blackLight"
                android:text="30"
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/dividerGray"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="温馨提示:"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="1.如需提供纸箱可能需要收取一定费用"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="2.大件物品，如体积过大,会按照体积收取运费，详情请咨询收派员"
                android:textSize="13sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="35dp"
            android:paddingEnd="35dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="end"
            android:background="@drawable/r5_sored"
            android:textColor="@color/white"
            android:text="确认"/>
    </LinearLayout>
</ScrollView>