<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:background="@drawable/r8_sowhite_top">
    <TextView
        android:text="新增拍卖商品"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/fzqk"
        android:layout_height="60dp"/>
    <View
        android:background="@color/lineGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="名称 :"/>
        <EditText
            android:id="@+id/name_et"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:textColor="@color/blackLight"
            android:background="@color/transparent"
            android:textSize="14sp"
            android:hint="@string/plz_input"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="起拍价 :"/>
        <com.yuanyu.ceramics.common.SquareImageView
            android:id="@+id/add_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/refresh"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/refresh"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="起拍价 :"/>
        <EditText
            android:id="@+id/price_et"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/blackLight"
            android:background="@color/transparent"
            android:textSize="14sp"
            android:inputType="number"
            android:hint="@string/please_input"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:textColor="@color/colorPrimary"
            android:background="@color/transparent"
            android:textSize="14sp"
            android:text="元"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="加价幅度 :"/>
        <EditText
            android:id="@+id/bid_et"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/blackLight"
            android:background="@color/transparent"
            android:textSize="14sp"
            android:inputType="number"
            android:hint="@string/plz_input"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:textColor="@color/colorPrimary"
            android:background="@color/transparent"
            android:textSize="14sp"
            android:text="元"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="竞拍时长"
        android:layout_margin="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/time_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1分钟"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/time_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3分钟"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/time_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5分钟"
            android:layout_weight="1"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="延时结拍"
        android:layout_margin="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/postpone_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0秒"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/postpone_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15秒"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/postpone_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30秒"
            android:layout_weight="1"
            android:gravity="center"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_marginStart="40dp"
            android:layout_centerVertical="true"
            android:minWidth="80dp"
            android:background="@drawable/btn_8rc_gray_red"
            android:textColor="@color/white"
            android:text="@string/cancel"/>
        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:minWidth="80dp"
            android:gravity="center"
            android:layout_marginEnd="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_style7"
            android:textColor="@color/white"
            android:text="@string/sure"/>
    </RelativeLayout>
</LinearLayout>